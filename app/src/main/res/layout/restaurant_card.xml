<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/restaurant_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintVertical_bias="0"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"

            android:src="@mipmap/restropicfrench"
            />


    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chef Passine Cafe"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/gilroy_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_pic"></TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.5"></ImageView>

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.3"
        android:textSize="15dp"
        android:fontFamily="@font/gilroy_bold"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/no_of_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/no_of_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1.5k+ review)"
        android:textSize="10dp"
        android:fontFamily="@font/gilroy"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintBottom_toBottomOf="@+id/rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rating"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/cusine1"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center_horizontal"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:text="PIZZA"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/cusine__text_background"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cusine2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></TextView>

    <TextView
        android:id="@+id/cusine2"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="SALAD"
        android:textStyle="bold"
        android:paddingVertical="2dp"
        android:fontFamily="@font/gilroy_bold"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/cusine__text_background"
        app:layout_constraintVertical_bias="0.0"

        app:layout_constraintBottom_toBottomOf="@id/cusine1"
        app:layout_constraintEnd_toStartOf="@id/cusine3"
        app:layout_constraintStart_toEndOf="@id/cusine1"
        app:layout_constraintTop_toTopOf="@+id/cusine1"></TextView>

    <TextView
        android:id="@+id/cusine3"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="PIZZA"
        android:paddingVertical="2dp"
        android:fontFamily="@font/gilroy_bold"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/cusine__text_background"
        app:layout_constraintVertical_bias="0.0"

        app:layout_constraintBottom_toBottomOf="@id/cusine1"
        app:layout_constraintEnd_toStartOf="@id/cusine4"
        app:layout_constraintStart_toEndOf="@id/cusine2"
        app:layout_constraintTop_toTopOf="@+id/cusine1"></TextView>

    <TextView
        android:id="@+id/cusine4"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="MAGGI"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/cusine__text_background"
        app:layout_constraintVertical_bias="0.0"

        app:layout_constraintBottom_toBottomOf="@id/cusine1"
        app:layout_constraintEnd_toStartOf="@id/cusine5"
        app:layout_constraintStart_toEndOf="@id/cusine3"
        app:layout_constraintTop_toTopOf="@+id/cusine1"></TextView>

    <TextView
        android:id="@+id/cusine5"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:textAlignment="center"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="BAR"
        android:textStyle="bold"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/cusine__text_background"
        app:layout_constraintVertical_bias="0.0"

        app:layout_constraintBottom_toBottomOf="@id/cusine1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cusine4"
        app:layout_constraintTop_toTopOf="@+id/cusine1"></TextView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:src="@drawable/ic_delivery_bike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cusine1"></ImageView>

    <TextView
        android:id="@+id/delivery_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Delivery"
        android:fontFamily="@font/gilroy"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"></TextView>



    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintHorizontal_bias="0.05"
        android:src="@drawable/ic_timer"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/delivery_charge"
        app:layout_constraintTop_toTopOf="@id/imageView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:fontFamily="@font/gilroy"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="10-15 mins"
        app:layout_constraintBottom_toBottomOf="@id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>








